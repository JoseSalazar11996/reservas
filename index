    <title>Reserva de Sala de Juntas</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }
        input, select, button {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
    </style>
    <!-- Importa Firebase -->
    <script type="module">
        // Import the functions you need from the SDKs you need
        import { initializeApp } from "https://www.gstatic.com/firebasejs/9.1.3/firebase-app.js";
        import { getFirestore, collection, getDocs, addDoc } from "https://www.gstatic.com/firebasejs/9.1.3/firebase-firestore.js";
        
        // Configuración de Firebase
        const firebaseConfig = {
            apiKey: "AIzaSyBqORsIxtgCrbvbaKj_Dstk6JTwqCARgw0",
            authDomain: "calendario-sala-de-juntas.firebaseapp.com",
            projectId: "calendario-sala-de-juntas",
            storageBucket: "calendario-sala-de-juntas.appspot.com",
            messagingSenderId: "118396556011",
            appId: "1:118396556011:web:8cf666bcb60cc06084a4ae",
            measurementId: "G-MVG4HMJRTN"
        };

        // Inicializa Firebase
        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        document.addEventListener('DOMContentLoaded', function() {
            cargarReservas();
        });

        async function cargarReservas() {
            const querySnapshot = await getDocs(collection(db, "reservas"));
            let listaReservas = document.getElementById('listaReservas');
            listaReservas.innerHTML = '';
            querySnapshot.forEach((doc) => {
                let reserva = doc.data();
                let li = document.createElement('li');
                li.textContent = `Fecha: ${reserva.fecha}, Hora de inicio: ${reserva.horaInicio}, Duración: ${reserva.duracion} horas`;
                listaReservas.appendChild(li);
            });
        }

        async function reservar() {
            let fecha = document.getElementById('fecha').value;
            let horaInicio = document.getElementById('horaInicio').value;
            let duracion = document.getElementById('duracion').value;

            try {
                const docRef = await addDoc(collection(db, "reservas"), {
                    fecha: fecha,
                    horaInicio: horaInicio,
                    duracion: duracion
                });
                alert("Reserva realizada con éxito");
                cargarReservas();
            } catch (error) {
                console.error("Error al realizar la reserva: ", error);
            }
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>Reserva de Sala de Juntas</h1>
        <form id="reservaForm" onsubmit="reservar(); return false;">
            <label for="fecha">Fecha:</label>
            <input type="date" id="fecha" name="fecha" required>
            <label for="horaInicio">Hora de inicio:</label>
            <input type="time" id="horaInicio" name="horaInicio" required>
            <label for="duracion">Duración (horas):</label>
            <input type="number" id="duracion" name="duracion" required>
            <button type="submit">Reservar</button>
        </form>
        <div id="reservasExistentes">
            <h2>Reservas Existentes</h2>
            <ul id="listaReservas">
                <!-- Reservas se cargarán aquí -->
            </ul>
        </div>
    </div>
